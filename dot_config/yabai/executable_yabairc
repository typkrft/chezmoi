#!/usr/bin/env bash

# LOAD SCRIPTING ADDITIONS
sudo yabai --load-sa
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"

# COLORS
INSERT="0xFF$(awk -F '[#]' '/color4/{print $2}' ~/.Xresources)"
ACTIVE="0xFF$(awk -F '[#]' '/color2/{print $2}' ~/.Xresources)"
INACTIVE="0xFF$(awk -F '[#]' '/background/{print $2}' ~/.Xresources)"

# BAR HEIGHT
BAR_HEIGHT=$(sketchybar -m --query bar | jq -r '.height')

# SETUP SPACES
source "${HOME}"/.config/bin/helper && create_spaces 6

GENERAL=(
    external_bar main:"${BAR_HEIGHT}":0
    split_type auto
    split_ratio 0.5
    auto_balance off
    insert_feedback_color "${INSERT}"
)

WINDOWS=(
    window_placement second_child
    window_topmost on
    window_zoom_persist on
    window_shadow float
    window_opacity on
    active_window_opacity 1.0
    normal_window_opacity 0.9
    window_animation_duration 0.0
    window_origin_display focused
    window_opacity_duration 0.15
)

BORDERS=(
    window_border on
    window_border_blur on
    window_border_hidpi on
    window_border_width 2
    window_border_radius 12
    active_window_border_color "${ACTIVE}"
    normal_window_border_color "${INACTIVE}"
)

LAYOUT=(
    layout bsp
    top_padding 6
    bottom_padding 6
    left_padding 6
    right_padding 6
    window_gap 10
)

MOUSE=(
    mouse_modifier ctrl
    mouse_action1 move
    mouse_action2 resize
    mouse_drop_action swap
    mouse_follows_focus on
    focus_follows_mouse autoraise
)

yabai -m config "${GENERAL[@]}"
yabai -m config "${WINDOWS[@]}"
yabai -m config "${BORDERS[@]}"
yabai -m config "${LAYOUT[@]}"
yabai -m config "${MOUSE[@]}"

# SPACE LABELS
LABELS=(
    main
    comms
    work
    media
    misc
    scratch
)

for (( i=1; i<="${#LABELS[@]}"; i++ )); do 
    yabai -m space "${i}" --label "${LABELS[(( $i - 1 ))]}"
done

# RULES
UNMANAGED=(
    Calculator
    Software Update
    Dictionary
    zoom.us
    Photo Booth
    Archive Utility
    Python
    LibreOffice
    App Store
    Steam
    Alfred
    Activity Monitor
    Finder
    Authy
    Bitwarden
    System Preferences
    System Settings
    ScanSnap
)

for (( i=1; i<="${#UNMANAGED[@]}"; i++ )); do 
    yabai -m rule --add label="unmanage_${UNMANAGED[(( $i - 1 ))]}" app="^${UNMANAGED[(( $i - 1 ))]}.*$" manage=off
done

# # TOPMOST
# yabai -m config --space 1 window_topmost on 
# yabai -m config --space 2 window_topmost off layout stack 
# yabai -m config --space 3 window_topmost off layout stack 
# yabai -m config --space 4 window_topmost on 
# yabai -m config --space 5 window_topmost on 
# yabai -m config --space 6 window_topmost off layout float


